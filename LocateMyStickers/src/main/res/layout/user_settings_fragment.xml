<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_settings_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:tag="user_account_info_fragment" >

    <TextView
        android:id="@+id/settings_locate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Locate my phone :"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ToggleButton
        android:id="@+id/settings_locate_togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:onClick="onUserSettingsLocateToggleButtonClicked"
        android:textOff="Off"
        android:textOn="On" />

    <View
        android:id="@+id/horizontal_bar_1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/settings_locate"
        android:background="#ccc" />

    <TextView
        android:id="@+id/settings_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_bar_1"
        android:layout_toLeftOf="@+id/settings_display_togglebutton"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Display the stickers i follow with my own stickers :"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ToggleButton
        android:id="@+id/settings_display_togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/horizontal_bar_1"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="onUserSettingsLocateToggleButtonClicked"
        android:textOff="Off"
        android:textOn="On" />

</RelativeLayout>