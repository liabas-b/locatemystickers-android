<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/topbar_fragment_framelayout"
        android:name="com.locatemystickers.TopBarFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />   
    
    <FrameLayout
        android:id="@+id/user_fragment_framelayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8" >
    </FrameLayout>

    <fragment
        android:id="@+id/menu_fragment_framelayout"
        android:name="com.locatemystickers.MenuFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>