<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_account_info_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:tag="user_account_info_fragment" >

    <TextView
        android:id="@+id/account_name_cat"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/account_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/account_name_cat"
        android:gravity="center_vertical"
        android:hint="Your name is empty."
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:paddingTop="20dp" />

    <View
        android:id="@+id/horizontal_bar_1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/account_name_cat"
        android:background="#ccc" />

    <TextView
        android:id="@+id/account_mail_cat"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_below="@+id/horizontal_bar_1"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/account_mail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_bar_1"
        android:layout_toRightOf="@+id/account_mail_cat"
        android:gravity="center_vertical"
        android:hint="Your email is empty."
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:paddingTop="20dp" />

    <View
        android:id="@+id/horizontal_bar_2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/account_mail_cat"
        android:background="#ccc" />

    <TextView
        android:id="@+id/account_img_text"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/horizontal_bar_2"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Add a photo or Image to your profile :"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/account_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_img_text"
        android:layout_centerHorizontal="true"
        android:padding="20dp" />

</RelativeLayout>